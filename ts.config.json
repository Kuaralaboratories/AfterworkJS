{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
  